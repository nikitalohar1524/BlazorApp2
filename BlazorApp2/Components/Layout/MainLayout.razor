@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    @Body
</div>

@code {
    private bool _scriptsLoaded;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_scriptsLoaded)
        {
            // Dynamically load OrgChart CSS and JS
            await JS.InvokeVoidAsync("eval", @"
                // Load OrgChart CSS
                var link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://balkangraph.com/js/latest/OrgChart.css';
                document.head.appendChild(link);

                // Load OrgChart JS from CDN
                var script = document.createElement('script');
                script.src = 'https://balkangraph.com/js/latest/OrgChart.js';
                script.onload = function() { console.log('OrgChart.js loaded'); };
                document.body.appendChild(script);

                // Load your custom JS
                var customScript = document.createElement('script');
                customScript.src = 'js/orgchart.js';
                document.body.appendChild(customScript);
            ");

            _scriptsLoaded = true;
        }
    }
}
